global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "node_exporter"
    static_configs:
{% for host in groups['target'] %}
      - targets: ["{{ hostvars[host]['ansible_all_ipv4_addresses'] | select('match','192\\.168\\.56\\..*') | list | first }}:9100"]
{% endfor %}

rule_files:
  - "/etc/prometheus/rules/*.yml"

alerting:
  alertmanagers:
    - static_configs:
        - targets: ["localhost:9093"]
